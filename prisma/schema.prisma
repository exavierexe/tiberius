// Prisma schema for contact form submissions
// You may need to adjust the datasource provider and url for Neon

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactSubmission {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  phone        String?
  message      String
  submittedAt  DateTime @default(now()) @map("submitted_at")
}

model EmailSignup {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  createdAt  DateTime @default(now())
}
